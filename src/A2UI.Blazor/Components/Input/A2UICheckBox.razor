@using A2UI.Blazor.Protocol
@inherits A2UIComponentBase

@{
    var label = GetString("label") ?? "";
    var isChecked = GetBool("checked");
    var disabled = GetBool("disabled");
    var error = _interacted ? null : (GetString("error") ?? GetValidationError("checked"));
    var helperText = GetString("helperText");
    var describedBy = error is not null ? $"{Data.Id}-error" : helperText is not null ? $"{Data.Id}-helper" : null;
}

<div class="a2ui-checkbox-wrapper @(error is not null ? "a2ui-checkbox--error" : "")">
    <label class="a2ui-checkbox">
        <input type="checkbox"
               checked="@isChecked"
               disabled="@disabled"
               aria-describedby="@describedBy"
               aria-invalid="@(error is not null ? "true" : null)"
               @onchange="HandleChange" />
        <span class="a2ui-checkbox-label">@label</span>
    </label>
    @if (error is not null)
    {
        <span id="@($"{Data.Id}-error")" class="a2ui-input-error">@error</span>
    }
    else if (helperText is not null)
    {
        <span id="@($"{Data.Id}-helper")" class="a2ui-input-helper">@helperText</span>
    }
</div>

@code {
    [Parameter]
    public EventCallback<A2UIUserAction> OnAction { get; set; }

    private bool _interacted;

    private async Task HandleChange(ChangeEventArgs e)
    {
        _interacted = true;
        ApplyOptimisticUpdate("checked", e.Value);
        var action = GetAction();
        if (action?.Event is not null)
        {
            var userAction = new A2UIUserAction
            {
                Name = action.Event.Name,
                SurfaceId = Surface.SurfaceId,
                SourceComponentId = Data.Id,
                Context = new Dictionary<string, object?> { ["checked"] = e.Value }
            };
            await OnAction.InvokeAsync(userAction);
        }
        else if (action?.FunctionCall is not null)
        {
            ExecuteLocalAction(action.FunctionCall);
        }
    }
}
