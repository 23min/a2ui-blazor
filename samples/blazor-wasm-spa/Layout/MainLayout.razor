@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Web

<div class="app-layout">
    <nav class="app-nav">
        <a href="/" class="app-brand">A2UI Blazor SPA</a>
        <div class="app-nav-links">
            <a href="/restaurant">Restaurants</a>
            <a href="/contacts">Contacts</a>
            <a href="/gallery">Gallery</a>
            <a href="/state-machine">State Machine</a>
            <a href="/error-demo">Error Demo</a>
        </div>
        <button class="app-theme-toggle" onclick="toggleTheme()" aria-label="Toggle theme" title="Toggle theme"></button>
    </nav>
    <main class="app-main">
        <ErrorBoundary>
            <ChildContent>
                @Body
            </ChildContent>
            <ErrorContent>
                <div style="padding: 2rem; text-align: center; color: #d32f2f;">
                    An unexpected error occurred.
                </div>
            </ErrorContent>
        </ErrorBoundary>
    </main>
</div>
