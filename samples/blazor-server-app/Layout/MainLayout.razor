@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Web

<div class="app-layout">
    <nav class="app-nav">
        <a href="/" class="app-brand">A2UI Blazor Server</a>
        <div class="app-nav-links">
            <a href="/restaurant">Restaurant Finder</a>
            <a href="/contacts">Contacts</a>
            <a href="/gallery">Component Gallery</a>
            <a href="/state-machine">State Machine</a>
        </div>
        <span class="app-badge">Blazor Server (SSR)</span>
    </nav>
    <main class="app-main">
        <ErrorBoundary>
            <ChildContent>
                @Body
            </ChildContent>
            <ErrorContent>
                <div style="padding: 2rem; text-align: center; color: #d32f2f;">
                    An unexpected error occurred.
                </div>
            </ErrorContent>
        </ErrorBoundary>
    </main>
</div>
